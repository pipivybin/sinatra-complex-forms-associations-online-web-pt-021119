<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
<input type="hidden" id="hidden" name="_method" value="patch">
<input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
<br>
Pet Owner:
<br>
<% @owners.each do |owner|%>
<input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner.id == owner.id %>><%= owner.name %></input>
<% end %>
<br>
Create New Owner:
<input type="text" name="owner[name]" id="owner_name">
<br>
<input type="submit" name="submit" value="Update Pet">
</form>
